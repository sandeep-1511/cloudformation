version: '3.8'

services:
  mongodb-prod:
    image: mongo:latest
    container_name: mongodb-prod
    ports:
      - "27017:27017"
    environment:
      MONGO_INITDB_ROOT_USERNAME: admin
      MONGO_INITDB_ROOT_PASSWORD: admin
    volumes:
      - ./prod_data:/data/db
    networks:
      - mongo_network
    restart: always

  mongodb-preprod:
    image: mongo:latest
    container_name: mongodb-preprod
    ports:
      - "27018:27017"
    environment:
      MONGO_INITDB_ROOT_USERNAME: admin
      MONGO_INITDB_ROOT_PASSWORD: admin
    volumes:
      - ./preprod_data:/data/db
    networks:
      - mongo_network
    restart: always

networks:
  mongo_network:
